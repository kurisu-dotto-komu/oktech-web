{
  "name": "project",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host",
    "build": "astro build",
    "preview": "astro preview --host",
    "typecheck": "astro check",
    "format": "prettier --write .",
    "import": "npx tsx ./scripts/import-data",
    "import:overwrite-maps": "npx tsx ./scripts/import-data --overwrite-maps",
    "import:clear": "npx tsx ./scripts/import-data/clear",
    "import:remove-fields": "npx tsx ./scripts/remove-fields.ts",
    "og-cache:clear": "npx tsx scripts/manage-og-cache.ts clear",
    "og-cache:stats": "npx tsx scripts/manage-og-cache.ts stats",
    "test:install": "./.devcontainer/installPlaywright.sh",
    "test": "playwright test",
    "test:build": "npm run build && TEST_BUILD=true playwright test",
    "test:build:fast": "TEST_BUILD=true playwright test",
    "test:report": "playwright show-report test/results/playwright-report --host 0.0.0.0 --port 9222 & echo 'Playwright report: http://localhost:9222'",
    "claude:sync-rules": "claude --dangerously-skip-permissions 'read prompts/sync-rules.md and execute this as a prompt'",
    "claude:code-review": "claude --dangerously-skip-permissions 'read prompts/code-review.md and execute this as a prompt'",
    "claude:typecheck-fix": "claude --dangerously-skip-permissions 'read prompts/typecheck-fix.md and execute this as a prompt'",
    "claude:code-smell": "claude --dangerously-skip-permissions 'read prompts/code-smell.md and execute this as a prompt'"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@faker-js/faker": "^9.8.0",
    "@iconify-json/cib": "^1.2.2",
    "@iconify-json/lucide": "^1.2.52",
    "@playwright/test": "^1.53.1",
    "@resvg/resvg-js": "^2.6.2",
    "@rollup/plugin-yaml": "^4.1.2",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.10",
    "@types/react-dom": "^19.1.6",
    "@types/react": "^19.1.8",
    "astro-icon": "^1.1.5",
    "astro": "^5.10.1",
    "daisyui": "^5.0.43",
    "dotenv": "^16.5.0",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "osm-static-maps": "^4.0.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier": "3.6.0",
    "puppeteer": "^24.10.2",
    "react-dom": "^19.1.0",
    "react": "^19.1.0",
    "satori-html": "^0.3.2",
    "satori": "^0.15.2",
    "sharp": "^0.34.2",
    "slugify": "^1.6.6",
    "tailwindcss": "^4.1.10",
    "theme-change": "^2.5.0",
    "typescript": "^5.8.3",
    "yaml": "^2.8.0"
  }
}
