---
import "@/styles/global.css";
import { SITE } from "@/config";
import { resolveInternalHref } from "@/utils/urlResolver";
import SEO from "@/components/Common/SEO.astro";
import SparklesCursor from "@/components/Common/SparklesCursor.tsx";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  type?: "website" | "article" | "profile";
  article?: {
    author?: string;
    publishedTime?: string;
    modifiedTime?: string;
    tags?: string[];
  };
  noindex?: boolean;
  nofollow?: boolean;
  ogImageParams?: {
    type?: "default" | "event" | "person" | "venue";
    slug?: string;
  };
}

const { title, ...seoProps } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=0.8, maximum-scale=0.8, user-scalable=no"
    />
    <SEO title={title} {...seoProps} />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={`${SITE.name} - Events RSS Feed`}
      href={resolveInternalHref(`/rss.xml`)}
    />
    <script is:inline>
      // ☝️ This script prevents the FART effect.
      if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "wireframe");
      } else {
        document.documentElement.setAttribute("data-theme", localStorage.getItem("theme"));
      }
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
    </script>
  </head>
  <body class="bg-base-100">
    <slot />
    <SparklesCursor client:load />
  </body>
</html>
