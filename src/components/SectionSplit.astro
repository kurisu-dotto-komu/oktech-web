---
import Container from "./Container.astro";

const { title, something, description, class: className, left } = Astro.props;
---

<section class:list={["bg-red-200 w-full py-12", className]}>
  <Container wide class="grid grid-cols-2">
    {left && <div class="bg-blue-200 aspect-square">Image Here</div>}
    <div class="bg-red-200">
      <div class="bg-green-200">
        {title && <h2 class="text-4xl font-bold mb-4">{title}</h2>}
        {description && <p class="text-gray-500">{description}</p>}
        <slot />
        <slot />
        {something}
      </div>
    </div>
    {!left && <div class="bg-blue-200 aspect-square">Image Here</div>}
  </Container>
</section>
