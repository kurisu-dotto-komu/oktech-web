---
import { Icon } from "astro-icon/components";
import { type Role } from "../data";

interface Props {
  role: Role;
}

const { role } = Astro.props;

const ROLE_CONFIGS = {
  Volunteer: {
    color: "badge-accent",
    icon: "lucide:hand",
  },
  Speaker: {
    color: "badge-error",
    icon: "lucide:mic",
  },
  Organizer: {
    color: "badge-warning",
    icon: "lucide:users",
  },
} as const;

const config = ROLE_CONFIGS[role];
---

<div
  class={`tooltip opacity-70 hover:opacity-100 transition-all duration-100 join-item badge w-7 h-7 ${config.color} px-1`}
  data-tip={role}
>
  <Icon name={config.icon} size={16} />
</div>
