---
import Button from "@/components/Common/Button.astro";
import ShaderBackground from "@/components/Common/ShaderBackground.tsx";

const { title, description, button, slim } = Astro.props;
---

<div class={`hero ${slim ? "" : "min-h-[70vh]"} bg-primary-content text-primary px-12 py-20 relative overflow-hidden`}>
  <!-- Animated Shader Background -->
  <ShaderBackground 
    client:load 
    variant="dots" 
    intensity={0.5}
    color="var(--primary)"
    secondaryColor="var(--color-secondary)"
    accentColor="var(--color-accent)"
    backgroundColor="var(--color-base-100)"
    className="opacity-40"
    interactive={true}
  />
  
  <div class="hero-content relative z-10">
    <div class="max-w-xl text-center text-pretty flex flex-col gap-16">
      {title && <h1 class="text-5xl font-bold">{title}</h1>}
      {description && <p class="text-2xl text-primary/70">{description}</p>}
      {button && <Button class="btn-xl" {...button} />}
      <slot />
    </div>
  </div>
</div>
