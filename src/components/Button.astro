---
import { Icon } from "astro-icon/components";
import Link from "./Link.astro";

const { href, text, icon, class: className, iconLeft = false } = Astro.props;
---

<Link class:list={["btn btn-primary mx-auto", className]} href={href}>
  {iconLeft && <Icon name={icon || "lucide:chevron-left"} />}
  {text}
  {!iconLeft && <Icon name={icon || "lucide:chevron-right"} />}
</Link>
