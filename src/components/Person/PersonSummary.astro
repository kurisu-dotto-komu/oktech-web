---
import { type Person } from "@/data";
import Link from "@/components/Common/Link.astro";
import PersonImage from "./PersonImage.astro";

interface Props {
  person: Person;
  showRoles?: boolean;
}

const { person } = Astro.props;
---

<Link
  data-theme={person.theme}
  href={`/person/${person.id}`}
  class="hover-zoom relative card bg-primary-content text-primary"
>
  <div class="card-body p-2">
    <!-- TODO use https://daisyui.com/components/avatar/ -->
    <div class="flex gap-6 items-center">
      <figure class="w-28 h-40 flex-shrink-0">
        <PersonImage person={person} />
      </figure>
      <div class="flex flex-col gap-2">
        <div>
          <h3 class="card-title text-xl">{person.name}</h3>
          <p class="text-sm">{person.jobTitle}</p>
        </div>
        <div class="gap-1 flex flex-wrap">
          {person.skills.map((skill) => <span class="badge badge-primary badge-sm">{skill}</span>)}
        </div>
      </div>
    </div>
  </div>
</Link>
