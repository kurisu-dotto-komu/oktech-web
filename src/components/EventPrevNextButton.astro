---
import PrevNextButton from "./PrevNextButton.astro";
import { type EventData } from "../data";
import { formatDate } from "../utils/date";

interface Props {
  data?: EventData;
  next?: boolean;
}

const { data, next = false } = Astro.props;

const direction = next ? "next" : "prev";
---

{
  data && (
    <PrevNextButton
      direction={direction}
      url={`/event/${data.id}`}
      image={data.cover}
      title={data.title}
      subtitle={formatDate(data.dateTime, "long")}
    />
  )
}
