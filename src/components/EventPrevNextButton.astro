---
import PrevNextButton from "./PrevNextButton.astro";
import { type EventData } from "../data";

interface Props {
  data?: EventData;
  next?: boolean;
}

const { data, next = false } = Astro.props;

const direction = next ? "next" : "prev";
---

{
  data && (
    <PrevNextButton
      direction={direction}
      url={`/event/${data.id}`}
      image={data.cover}
      title={data.title}
      subtitle={new Date(data.dateTime).toLocaleDateString("en-US", {
        month: "short",
        day: "numeric",
        year: "numeric",
      })}
    />
  )
}
