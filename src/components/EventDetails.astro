---
import type { Event } from "../data";
import MemberSummary from "./MemberSummary.astro";
import EventInfo from "./EventInfo.astro";

interface Props {
  event: Event;
}

const { event } = Astro.props;
---

<div class="w-full flex flex-col gap-8">
  <div class="md:hidden flex flex-col gap-10">
    <h1 class="text-4xl font-bold">{event.title}</h1>
    <EventInfo event={event} />
  </div>

  <div class="flex flex-col md:flex-row gap-12">
    <div class="md:w-2/3 flex flex-col gap-10">
      <figure class="rounded-xl aspect-video w-full bg-base-300 shadow-xl overflow-hidden">
        <img src={event.coverImage} alt={event.title} class="w-full h-full object-cover" />
      </figure>
      <h1 class="hidden md:block text-4xl font-bold">{event.title}</h1>
      <div class="prose max-w-none">{event.description}</div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {event.speakers.map((speaker) => <MemberSummary member={speaker} />)}
      </div>
    </div>

    <div class="hidden md:block md:w-1/3 relative">
      <div class="sticky top-20 card bg-base-100 shadow-lg rounded-lg overflow-hidden">
        <div class="card-body p-0">
          <EventInfo event={event} />
        </div>
      </div>
    </div>
  </div>
</div>
