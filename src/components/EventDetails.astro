---
import type { Event } from "../data";
import EventInfo from "./EventInfo.astro";
import Lorem from "./Lorem.astro";
import EventJoinButton from "./EventJoinButton.astro";
import { getCollection } from "astro:content";
import { getEntry } from "astro:content";
import { render } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  event: Event;
}

const { event } = Astro.props;

const markdown = await import(`/content/events/${event.id}/event.md`);

if (!markdown) {
  throw new Error(`Event with id ${event.id} not found`);
}

const { Content } = await render(markdown);
---

<div class="w-full flex flex-col gap-8">
  <div class="md:hidden flex flex-col gap-10">
    <h1 class="text-4xl font-bold pt-6">{event.title}</h1>
    <EventInfo event={event} />
    <EventJoinButton />
  </div>

  <div class="flex flex-col md:flex-row gap-12">
    <div class="md:w-2/3 flex flex-col gap-10">
      <figure class="rounded-xl aspect-video w-full bg-base-300 shadow-xl overflow-hidden">
        <Image
          src={event.cover}
          alt={event.title}
          class="w-full h-full object-cover"
          width={512}
          height={512}
        />
      </figure>
      <h1 class="hidden md:block text-4xl font-bold pt-6">{event.title}</h1>
      <div class="flex flex-col gap-4 max-w-none">
        <Content />
        <!-- {JSON.stringify({ entry, event })} -->
      </div>
    </div>

    <div class="hidden md:block md:w-1/3 relative">
      <div class="sticky top-20 flex flex-col gap-8">
        <div class="card bg-base-100 shadow-lg rounded-lg overflow-hidden">
          <div class="card-body p-0">
            <EventInfo event={event} />
          </div>
        </div>
        <EventJoinButton />
      </div>
    </div>
  </div>
</div>
