---
import Container from "./Container.astro";

const { title, description, class: className } = Astro.props;
---

<section class:list={["py-12", className]}>
  <Container>
    {title && <h2 class="text-4xl font-bold text-center mb-4">{title}</h2>}
    {description && <p class="text-gray-500 text-center">{description}</p>}
    <slot />
  </Container>
</section>
