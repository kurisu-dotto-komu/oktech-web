---
import Container from "./Container.astro";
import Lorem from "./Lorem.astro";
import Button from "./Button.astro";

const {
  anchor,
  button,
  title,
  description,
  left,
  class: className,
  split,
  markdown,
  lorem,
  inline,
} = Astro.props;
---

<section class:list={["py-12", className]} id={anchor}>
  <Container
    wide={split}
    class:list={[
      split && "grid md:grid-cols-2 gap-24 items-center",
      left && "md:[&>*:first-child]:order-2 md:[&>*:last-child]:order-1",
    ]}
  >
    {
      (title || description || markdown) && (
        <div
          class:list={[
            split && "max-w-xl m-auto text-lg flex flex-col gap-6",
            inline && "flex gap-12 justify-between items-center",
          ]}
        >
          {title && <h2 class:list={["text-3xl font-bold", !inline && "mb-4"]}>{title}</h2>}
          <div>
            {description && <p class="">{description}</p>}
            {markdown && <div> TODO: RENDER: {markdown}</div>}
            {lorem && <Lorem />}
            {button && <Button {...button} />}
          </div>
        </div>
      )
    }
    <slot />
  </Container>
</section>
