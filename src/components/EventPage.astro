---
import { resolveEvent } from "../data";
import PageLayout from "../layouts/PageLayout.astro";
import Section from "./Section.astro";
import EventDetails from "./EventDetails.astro";
import EventGallery from "./EventGallery.astro";
import EventNavigation from "./EventNavigation.astro";
import EventSpeakers from "./EventSpeakers.astro";

const event = await resolveEvent(Astro);
---

<PageLayout title={`${event.data.title} - Events`}>
  <Section>
    <EventNavigation />
    <EventDetails />
  </Section>
  <EventSpeakers />
  <EventGallery />
  <Section>
    <EventNavigation />
  </Section>
</PageLayout>
