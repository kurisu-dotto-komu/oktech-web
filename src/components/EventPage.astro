---
import { resolveEvent } from "../data";
import PageLayout from "../layouts/PageLayout.astro";
import Section from "./Section.astro";
import EventDetails from "./EventDetails.astro";
import EventGallery from "./EventGallery.astro";
import EventNavigation from "./EventNavigation.astro";
import EventSpeakers from "./EventSpeakers.astro";

const event = await resolveEvent(Astro);

// Simple description based on event title and date
const eventDate = new Date(event.data.dateTime).toLocaleDateString('en-US', { 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});
const description = `${event.data.title} - ${eventDate}. Join us for this event organized by OKWireframe (Osaka Kansai Wireframe Meetup Group) - Osaka's web development and design community.`;
---

<PageLayout title={`${event.data.title} - Events`} description={description}>
  <Section>
    <EventNavigation />
    <EventDetails />
  </Section>
  <EventSpeakers />
  <EventGallery />
  <Section>
    <EventNavigation />
  </Section>
</PageLayout>
