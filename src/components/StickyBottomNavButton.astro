---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import Link from "./Link.astro";

interface Props {
  href?: string;
  title?: string;
  subtitle?: string;
  image?: ImageMetadata;
  next?: boolean;
  class?: string;
}

const { href, title, subtitle, image, next = false, class: className } = Astro.props;
const isNext = next;

// Common button classes
const buttonClasses = "join-item btn btn-soft h-14 py-0 px-1 md:px-2 flex-1";
---

{
  href ? (
    <Link
      href={href}
      class={`${buttonClasses} ${isNext ? "flex-row-reverse" : ""} ${className || ""}`}
      title={title}
    >
      <Icon name={`lucide:chevron-${isNext ? "right" : "left"}`} size={20} class="mx-1 md:mx-2 flex-shrink-0" />

      {image && (
        <figure class="aspect-video h-full flex-shrink-0 overflow-hidden rounded bg-base-300 hidden sm:block">
          <Image src={image} alt={title || ""} width={80} height={80} class="w-full h-full object-cover" />
        </figure>
      )}

      <div class={`flex flex-col flex-1 min-w-0 px-2 md:px-3 ${isNext ? "text-right" : "text-left"}`}>
        <span class="text-xs md:text-sm font-semibold truncate">{title}</span>
        {subtitle && <span class="text-xs opacity-70 hidden sm:block">{subtitle}</span>}
      </div>
    </Link>
  ) : null
}