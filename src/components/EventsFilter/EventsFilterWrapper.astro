---
import EventsFilterBridge from "./EventsFilterBridge";

export interface Props {
  items: any[];
  currentFilters: {
    search: string;
    topics?: string[];
    location?: string;
    sort: string;
    view: string;
  };
  availableFilters: {
    topics: string[];
    locations: string[];
  };
  sortOptions: Array<{ value: string; label: string }>;
}

const { items, currentFilters, availableFilters, sortOptions } = Astro.props;

// Don't pass initialFilters - let the client read URL params directly
---

<EventsFilterBridge
  client:load
  items={items}
  availableFilters={availableFilters}
  sortOptions={sortOptions}
  currentView={currentFilters.view}
/>
