---
import EventSummary from "@/components/Event/EventSummary.astro";
import Section from "@/components/Common/Section.astro";

import type { EventsArray } from "@/data";

interface Props {
  events: EventsArray;
}

const { events } = Astro.props;
---

<Section grid wide>
  {
    events.map((event) => (
      <div data-item-id={event.slug || event.id}>
        <EventSummary eventSlug={event.id} />
      </div>
    ))
  }
</Section>
